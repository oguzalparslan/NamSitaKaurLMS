@using NamSitaKaurLMS.WebUI.Areas.Admin.Models.ViewModels
@model IEnumerable<UserListItemViewModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}
<div id="popup"></div>
<h1>Kullanıcı Listesi</h1>

<button id="btnAddNewUser" class="btn btn-outline-success my-2">Yeni Kullanıcı ekle</button>

<table class="table table-bordered table-hover align-middle w-100">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Kullanıcı Adı</th>
            <th>e-Mail</th>
            <th>e-Mail Doğrulanmış mı ?</th>
            <th>Cep Telefonu</th>
            <th>Kullanıcı Rolleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id.Substring(0, 3)*******@user.Id.Substring(user.Id.Length - 3, 3)</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.EmailConfirmed</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge bg-@(user.Roles.Contains("Admin") ? "success" : "primary") text-light p-3">
                            @role.ToString()
                        </span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary">Güncelle</button>
                        <button type="button" class="btn btn-outline-primary">Sil</button>
                        <button type="button" class="btn btn-outline-primary">Rol Değiştir</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
          const popup = document.querySelector("#popup");
          const addUserButton = document.querySelector("#btnAddNewUser");

          // 1) Modalı GET ile çekip göster
          addUserButton.addEventListener("click", async function (e) {
            e.preventDefault();

            const url = '@Url.Action("CreateUser", "Dashboard", new { area = "Admin" })';
            const res = await fetch(url, { credentials: "same-origin" });
            const html = await res.text();

            popup.innerHTML = html;

            const modalEl = popup.querySelector("#createUserModal");
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
            modal.show();
          });

          // 2) Modal içindeki form submit’ini yakala (delegation)
          popup.addEventListener("submit", async function (e) {
            const form = e.target;
            if (!form.matches("#createUserForm")) return;

            e.preventDefault();

            const res = await fetch(form.action, {
              method: "POST",
              body: new FormData(form),
              credentials: "same-origin"
            });

            // ✅ ASIL OLAY: server redirect döndüyse, tarayıcıya biz redirect ettiriyoruz
            if (res.redirected) {
              window.location.href = res.url;
              return;
            }

            // Redirect yoksa: büyük ihtimalle validation hatası -> partial html döndü
            const html = await res.text();
            popup.innerHTML = html;

            // modal tekrar render olduysa yeniden show
            const modalEl = popup.querySelector("#createUserModal");
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
            modal.show();
          });
        });
    </script>
}