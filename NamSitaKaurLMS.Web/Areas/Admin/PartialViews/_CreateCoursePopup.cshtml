@using NamSitaKaurLMS.Core.Dtos
@model CreateCourseDto

<div class="modal fade" id="createCourseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Yeni Kurs Tanımlama</h5>
            </div>

            <form id="createCourseForm"
                  asp-area="Admin"
                  asp-controller="Dashboard"
                  asp-action="CreateCourse"
                  method="post">

                <div class="modal-body">

                    <!-- Kurs Adı -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Kurs Adı</label>
                        <div class="col-md-8">
                            <input asp-for="Title" class="form-control" />
                        </div>
                    </div>

                    <!-- Slug -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Slug</label>
                        <div class="col-md-8">
                            <input asp-for="Slug" class="form-control" />
                        </div>
                    </div>

                    <!-- Kategori -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Kategori</label>
                        <div class="col-md-8">
                            <input asp-for="Category" class="form-control" />
                        </div>
                    </div>

                    <!-- Seviye -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Seviye</label>
                        <div class="col-md-8">
                            <select asp-for="Level" class="form-select">
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                            </select>
                        </div>
                    </div>

                    <!-- Dil -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Dil</label>
                        <div class="col-md-8">
                            <select asp-for="Language" class="form-select">
                                <option value="TR">Türkçe</option>
                                <option value="EN">English</option>
                            </select>
                        </div>
                    </div>

                    <!-- Fiyat -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Fiyat</label>
                        <div class="col-md-8">
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        </div>
                    </div>

                    <!-- Süre -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Süre (dk)</label>
                        <div class="col-md-8">
                            <input asp-for="DurationMinutes" type="number" class="form-control" />
                        </div>
                    </div>

                    <!-- Kontenjan -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Kontenjan</label>
                        <div class="col-md-8">
                            <input asp-for="Quota" type="number" class="form-control" />
                        </div>
                    </div>

                    <!-- Durum -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Durum</label>
                        <div class="col-md-8">
                            <select asp-for="Status" class="form-select">
                                <option value="0">Planlanan</option>
                                <option value="1">Devam Eden</option>
                                <option value="2">Tamamlandı</option>
                            </select>
                        </div>
                    </div>

                    <!-- Başlangıç -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Başlangıç Tarihi</label>
                        <div class="col-md-8">
                            <input asp-for="StartDate" type="date" class="form-control" />
                        </div>
                    </div>

                    <!-- Bitiş -->
                    <div class="row mb-2 align-items-center">
                        <label class="col-md-4 col-form-label">Bitiş Tarihi</label>
                        <div class="col-md-8">
                            <input asp-for="EndDate" type="date" class="form-control" />
                        </div>
                    </div>

                    <!-- Checkboxlar -->
                    <div class="row mb-2">
                        <div class="col-md-8 offset-md-4">
                            <div class="form-check">
                                <input asp-for="IsFree" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsFree">Ücretsiz Kurs</label>
                            </div>

                            <div class="form-check">
                                <input asp-for="IsPublished" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsPublished">Yayında</label>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button id="btnCancel" type="button" class="btn btn-secondary">İptal</button>
                </div>

            </form>
        </div>
    </div>
</div>

