<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NamSitaKaurLMS.Web</title>
    <script type="importmap"></script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/cards.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light py-2">
            <div class="container-lg">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
                    <div class="brand-icon d-flex align-items-center justify-content-center me-2">
                        <span class="text-primary fs-5">ॐ</span>
                    </div>
                    <div class="d-flex flex-column lh-1">
                        <span class="font-display fw-semibold small text-slate-900">Namsita Yoga LMS</span>
                        <span class="xsmall text-slate-500">Find Your Inner Balance</span>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto align-items-md-center gap-md-3">
                        <li class="nav-item ms-md-2 mt-2 mt-md-0">
                            <a asp-controller="Account" asp-action="Login" class="btn-ghost-sm">Sign In</a>
                        </li>
                        <li class="nav-item mt-2 mt-md-0">
                            <a asp-controller="Account" asp-action="Register" class="btn-primary-sm">Join Now</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top border-primary-soft bg-soft-gray mt-4">
        <div class="container-lg py-4 small">
            <div class="row g-4">
                <div class="col-md-4">
                    <h4 class="fw-semibold text-slate-900 mb-2 small">About</h4>
                    <p class="text-slate-600 xsmall mb-0">
                        A calm digital space for your yoga journey, combining mindful movement with continuous learning.
                    </p>
                </div>
                <div class="col-md-4">
                    <h4 class="fw-semibold text-slate-900 mb-2 small">Explore</h4>
                    <ul class="list-unstyled xsmall text-slate-600 mb-0">
                        <li><a href="#" class="text-decoration-none link-soft">Beginner Path</a></li>
                        <li><a href="#" class="text-decoration-none link-soft">Meditation Series</a></li>
                        <li><a href="#" class="text-decoration-none link-soft">Breathwork Labs</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4 class="fw-semibold text-slate-900 mb-2 small">Stay in touch</h4>
                    <form class="d-flex gap-2 xsmall">
                        <input type="email" class="form-control form-control-sm rounded-pill bg-white-90 border-primary-soft"
                               placeholder="Email for gentle updates" />
                        <button type="submit" class="btn-primary-sm px-3">Send</button>
                    </form>
                </div>
            </div>
            <div class="border-top border-primary-soft mt-3 pt-3 text-center xsmall text-slate-500">
                © 2025 Namsita Yoga LMS. All rights reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui-interactions.js"></script>
    <script src="~/js/slider.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
