@*
  Views/Shared/_LayoutApp.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Namsita Yoga LMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/components/buttons.css" />
    <link rel="stylesheet" href="~/css/components/cards.css" />
</head>
<body class="bg-beige">
    <div class="d-flex flex-column min-vh-100">

        <header class="border-bottom border-primary-soft bg-beige sticky-top">
            <nav class="navbar navbar-expand-md navbar-light py-2">
                <div class="container-lg">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
                        <div class="brand-icon d-flex align-items-center justify-content-center me-2">
                            <span class="text-primary fs-5">ॐ</span>
                        </div>
                        <div class="d-flex flex-column lh-1">
                            <span class="font-display fw-semibold small text-slate-900">Namsita Yoga LMS</span>
                            <span class="xsmall text-slate-500">Find Your Inner Balance</span>
                        </div>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav ms-auto align-items-md-center gap-md-3">
                            <li class="nav-item">
                                <a class="nav-link nav-link-soft" asp-controller="Courses" asp-action="Index">Classes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-soft" asp-controller="Profile" asp-action="Index">My Space</a>
                            </li>
                            <li class="nav-item d-none d-md-block">
                                <a class="nav-link nav-link-soft" asp-controller="Home" asp-action="Index" asp-fragment="schedule">Schedule</a>
                            </li>
                            <li class="nav-item d-none d-md-block">
                                <a class="nav-link nav-link-soft" asp-controller="Home" asp-action="Index" asp-fragment="testimonials">Stories</a>
                            </li>
                            <li class="nav-item ms-md-2 mt-2 mt-md-0">
                                <a asp-controller="Account" asp-action="Login" class="btn-ghost-sm">Sign In</a>
                            </li>
                            <li class="nav-item mt-2 mt-md-0">
                                <a asp-controller="Account" asp-action="Register" class="btn-primary-sm">Join Now</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="flex-grow-1">
            @RenderBody()
        </main>

        <footer class="border-top border-primary-soft bg-soft-gray mt-4">
            @* Buraya index.html’deki footer'ı aynen taşı *@
            <div class="container-lg py-4 small">
                <!-- ... -->
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui-interactions.js"></script>
    <script src="~/js/slider.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
