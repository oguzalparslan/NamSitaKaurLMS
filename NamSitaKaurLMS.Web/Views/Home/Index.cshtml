@{
    Layout = "_LayoutPublic";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-beige py-5 py-lg-6">
    <div class="container-lg">
        <div class="row align-items-center g-5">
            <!-- Text -->
            <div class="col-md-6">
                <div class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-pill bg-white shadow-soft xsmall text-primary mb-3 animate-fade-in">
                    <span class="dot-sage"></span>
                    Yeni: 4 haftalık Mindful Sabah Programı
                </div>

                <h1 class="font-display fw-semibold text-slate-900 display-6 mb-3 animate-fade-in">
                    İç Dengenİ Bul<br />
                    <span class="text-primary">Öğrenerek Dönüş</span>
                </h1>

                <p class="small text-slate-600 mb-4 animate-fade-in">
                    Rehberli derslere, yapılandırılmış programlara ve mindfulness araçlarına dilediğin zaman, dilediğin yerden eriş.
                    Kendi ritmine uygun, sürdürülebilir bir yoga alışkanlığı oluştur.
                </p>

                <div class="d-flex flex-wrap gap-3 mb-4 animate-fade-in">
                    <a href="#" class="btn-primary-lg">Hemen Katıl</a>
                    <a href="#" class="btn-ghost-lg">Dersleri Keşfet</a>
                </div>

                <div class="d-flex align-items-center gap-3 animate-fade-in-delayed">
                    <div class="d-flex">
                        <div class="avatar-circle bg-sage me-n2 border-beige"></div>
                        <div class="avatar-circle bg-primary-soft me-n2 border-beige"></div>
                        <div class="avatar-circle bg-soft-gray border-beige"></div>
                    </div>
                    <p class="xsmall text-slate-500 mb-0">
                        Yoga yolculuğunda <span class="fw-semibold text-primary">1.200+</span> öğrencinin güvendiği alan.
                    </p>
                </div>
            </div>

            <!-- Illustration / Card -->
            <div class="col-md-6">
                <div class="card border-0 rounded-4 shadow-soft bg-white-90 p-4 animate-fade-in-delayed">
                    <div class="ratio ratio-16x9 rounded-4 bg-gradient-yoga d-flex align-items-center justify-content-center mb-3">
                        <span class="text-primary display-4">🧘‍♀️</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center xsmall mb-2">
                        <div>
                            <p class="text-slate-500 text-uppercase mb-0">Bugünkü Pratik</p>
                            <p class="text-slate-900 fw-medium mb-0">Yumuşak Sabah Akışı</p>
                        </div>
                        <span class="badge rounded-pill bg-primary-soft text-slate-700 px-3 py-2">
                            25 dk • Başlangıç
                        </span>
                    </div>

                    <div class="progress yoga-progress mb-3">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>

                    <button class="btn-primary-full w-100">
                        Pratiğe Devam Et
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses -->
